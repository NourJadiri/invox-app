// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Student {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String?  @unique
  phone     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lessons   Lesson[]
  invoices  Invoice[]
}



model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Lesson {
  id        String   @id @default(cuid())
  title     String?
  start     DateTime
  end       DateTime
  notes     String?
  price     Float?
  recurrent Boolean  @default(false)
  color     String?  // Hex color code (e.g., #3b82f6)
  
  // Google Calendar Sync
  googleEventId String?

  studentId String
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  // For recurring lessons: links instances to their template
  recurringLessonId String?
  recurringLesson   Lesson?  @relation("RecurringInstances", fields: [recurringLessonId], references: [id], onDelete: Cascade)
  instances         Lesson[] @relation("RecurringInstances")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Invoice {
  id        String   @id @default(cuid())
  startDate DateTime
  endDate   DateTime
  total     Float    @default(0)
  createdAt DateTime @default(now())

  students  Student[]
}
